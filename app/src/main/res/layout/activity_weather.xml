<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C90798"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wheater App"
            android:layout_marginTop="30dp"
            android:textSize="30dp"
            android:textColor="#FAFAFA"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#EC04C6">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/tanggal"
                android:layout_height="wrap_content"
                android:textColor="#FAFAFA"
                android:textSize="20dp"
                android:text="Today, April 03"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FAFAFA"
                android:layout_below="@+id/tanggal"
                android:layout_marginTop="20dp"
                android:textSize="60dp"
                android:id="@+id/suhu"
                android:text="26"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="#FAFAFA"
                android:layout_below="@id/tanggal"
                android:layout_toRightOf="@+id/suhu"
                android:textSize="20dp"
                android:text=""/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FAFAFA"
                android:layout_below="@+id/suhu"
                android:layout_marginTop="20dp"
                android:textSize="30dp"
                android:id="@+id/suhu2"
                android:text="20"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="#FAFAFA"
                android:layout_below="@id/suhu"
                android:layout_toRightOf="@+id/suhu2"
                android:textSize="15dp"
                android:text="0"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/gambar"
               />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cloudy"
                android:layout_marginTop="20dp"
                android:textColor="#FAFAFA"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:textSize="30dp"
                android:layout_below="@id/gambar"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF00E6">
        <ImageView
            android:id="@+id/gambarawan"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview"
            android:text="12:00"
            android:textSize="30dp"
            android:textColor="#FAFAFA"
            android:layout_marginTop="40dp"
            android:layout_toRightOf="@id/gambarawan"/>
        <ImageView
            android:id="@+id/gambarawan2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="20dp"
            android:layout_below="@id/gambarawan"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview2"
            android:text="12:00"
            android:textSize="30dp"
            android:textColor="#FAFAFA"
            android:layout_marginTop="60dp"
            android:layout_below="@id/textview"
            android:layout_toRightOf="@id/gambarawan2"/>
        <Button
            android:id="@+id/button3"
            android:layout_below="@id/textview2"
            android:layout_centerHorizontal="true"
            android:layout_width="100dp"
            android:text="Pindah"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>